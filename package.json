{
  "name": "mesh-gradient",
  "private": true,
  "author": "Mikhail Mogilnikov",
  "license": "MIT",
  "version": "1.0.0",
  "homepage": "https://github.com/mikhailmogilnikov/mesh-gradient",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3",
    "turbo": "^2",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/**/*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
